{% if comments is not null %}
    <h2>Liste des commentaires</h2>
    {% for comment in comments %}
        {% if comment.isActive %}
            <div class="border-top border-dark mt-3 p-3">
                <p class="text-black-50">{{ comment.user.pseudo }} Le {{ comment.createdAt|date("d/m/Y") }}</p>
                <p>{{ comment.content }} </p>
            </div>
        {% endif %}
    {% endfor %}
    {% include './components/pagination/_pagination.html.twig' %}
{% endif %}