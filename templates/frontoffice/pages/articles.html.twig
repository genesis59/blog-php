{% extends './frontoffice/layout.html.twig' %}

{% block content %}
    <div class="container mt-4 mb-4">
        {% include './components/_flashes.html.twig' %}
        <section class="container mt-4">
            <h2 class="border-5 border-bottom border-dark pb-2">Listes des articles</h2>
            <div class="row">
                {% if articles is not null %}
                    {% for article in articles %}
                        {% include './frontoffice/components/article/_displayForListArticle.html.twig' %}
                    {% endfor %}
                    {% include './components/pagination/_pagination.html.twig' %}
                {% else %}
                    <h4 class="text-center mt-5">Aucun article pour le moment.</h4>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}