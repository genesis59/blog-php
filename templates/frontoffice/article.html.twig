{% extends './frontoffice/layout.html.twig' %}

{% block content %}
    <div class="container mt-4 mb-4">
        {% include './frontoffice/components/article/_displayForArticleDetail.html.twig' %}
        {% include './frontoffice/components/pagination/_paginateNextPreviousForArticleDetail.html.twig' %}

        {#        ne pas affiché si not user #}
        {% include './frontoffice/components/form/_formAddComment.html.twig' %}
        <h2>Liste des commentaires</h2>
        {% if comments is not null %}
            {% for comment in comments %}
                {% if comment.isActive %}
                <div class="border-top border-dark mt-3 p-3">
                    <p class="text-black-50">{{ comment.user.pseudo }} Le {{ comment.createdAt|date("d/m/Y") }}</p>
                    <p>{{ comment.content }} </p>
                </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <p class="text-center m-5">Cette article n'a pas encore été commenté</p>
        {% endif %}
    </div>
{% endblock %}